{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend/src",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "poetry lock --no-update"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "dev": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "fastapi dev src/main.py"
      }
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "apps/backend/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "typecheck": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "pytype src tests"
      }
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": ["{workspaceRoot}/reports/backend/pylint.txt"],
      "options": {
        "lintFilePatterns": ["src", "tests"],
        "outputFile": "reports/backend/pylint.txt"
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/backend/unittests",
        "{workspaceRoot}/coverage/backend"
      ],
      "options": {
        "cwd": "{projectRoot}",
        "command": "pytest tests/"
      }
    }
  },
  "tags": []
}
